---
import Layout from '../layouts/Layout.astro';
import FakerMakerApp from '../components/FakerMakerApp.vue'

---

<Layout>
	<h1 class="flex items-center justify-between bg-accent-pink px-8 py-1 text-bg">
		<span class="text-sm font-black">⚡ WIP ⚡</span>
		<span class="text-xs font-black">last updated JAN-01-2025</span>
		<span class="text-xs font-black">will be finished by JAN-21-2025</span>
	</h1>

	<div class="mx-8">
		<h1 class="text-text-grey text-[40px] font-black mt-10">fakermaker</h1>
		<h2 class="text-text-grey mt-3.5 max-w-[500px] leading-[22px]">Quickly generate fake test data using characters from your favorite movies, shows, video games, and more.</h2>
	</div>

		<FakerMakerApp client:load/>

</Layout>

<script>
	import { VueQueryPlugin, QueryClient } from '@tanstack/vue-query'
	import { createApp } from 'vue'
	import FakerMakerApp from '../components/FakerMakerApp.vue'

	const app = createApp(FakerMakerApp)
	const queryClient = new QueryClient()

	app.use(VueQueryPlugin, {
		queryClient
	})
</script>